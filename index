    <script>
        // Banco de dados em mem√≥ria
        let checklists = [];
        let editingIndex = -1;
        let isDarkMode = false;
        
        // Dispositivos comuns para refer√™ncia
        const dispositivosComuns = [
            "SETAS", "SENSOR DE PORTA DE MOTORISTA", "SENSOR DE PORTA DE CARONA",
            "BLOQUEIO", "SIRENE", "GPS", "SENSOR DE PAINEL", "ANTENA SATELITAL",
            "ANTENA CELULAR (GSM/GPRS)", "TECLADO", "BOTAO DE PANICO", "SENSOR DE IGNICAO",
            "BATERIA", "SENSOR TEMPERATURA", "VIDROS", "PNEUS", "FAROIS E LANTERNAS",
            "NIVEL COMBUSTIVEL", "CHICOTE RASTREADOR", "PINTURA / SOLDA PINOS BAU",
            "SIRENE DE R√â", "TRAVA DE BAU TRASEIRA", "SENSOR DE BAU TRASEIRO",
            "SENSOR DE DESENGATE", "TRAVA DE BAU LATERAL", "SENSOR DE BAU LATERAL",
            "TRAVA DE QUINTA RODA"
        ];
        
        // Elementos DOM
        const fileInput = document.getElementById('fileInput');
        const exportBtn = document.getElementById('exportBtn');
        const removerDuplicadosBtn = document.getElementById('removerDuplicadosBtn');
        const novoChecklistBtn = document.getElementById('novoChecklistBtn');
        const searchInput = document.getElementById('searchInput');
        const filterTipo = document.getElementById('filterTipo');
        const filterStatus = document.getElementById('filterStatus');
        const limparFiltrosBtn = document.getElementById('limparFiltrosBtn');
        const tableBody = document.getElementById('tableBody');
        const noDataMessage = document.getElementById('noDataMessage');
        const statusBadges = document.getElementById('statusBadges');
        const editModal = document.getElementById('editModal');
        const btnDarkMode = document.getElementById('btnDarkMode');
        const debugBtn = document.getElementById('debugBtn');
