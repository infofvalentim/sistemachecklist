        const cancelarBtn = document.getElementById('cancelarBtn');
        const salvarChecklistBtn = document.getElementById('salvarChecklistBtn');
        const excluirChecklistBtn = document.getElementById('excluirChecklistBtn');
        const addDispositivoBtn = document.getElementById('addDispositivoBtn');
        const dispositivosContainer = document.getElementById('dispositivosContainer');
